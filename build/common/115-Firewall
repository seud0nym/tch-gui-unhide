    exec_uci commit firewall
  else
    dot_fwd_enabled='0'
  fi
  [ -n "$VERBOSE" ] && echo -e "[$SCRIPT]: Creating configuration firewall.dot6_fwd_xcptn"
  exec_uci set firewall.dot6_fwd_xcptn='rule'
  exec_uci set firewall.dot6_fwd_xcptn.name='Allow-DoTv6'
